!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Ablass"

    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %meta{:content => content_for?(:description) ? yield(:description) : "Ablass", :name => "description"}
    %meta{name: "apple-mobile-web-app-capable", content:"yes"}

    - # todo: make this work
    - # %meta{name:"viewport", content:"target-densitydpi=device-dpi, width=device-width, user-scalable=no, maximum-scale=1, minimum-scale=1"}
    %meta{name:"apple-mobile-web-app-status-bar-style", content:"black"}

    = render "layouts/social_media_gubbins"

    %link{rel:"stylesheet", href: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"}
    %link{rel:"apple-touch-icon-precomposed", href:"images/A-logo_devilhorns_cream.png"}

    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag "application"
    %script{src:"//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}

    = csrf_meta_tags
    = yield(:head)
  %body.bck-gradient{class: "#{controller.controller_name}_controller" }
    = render "layouts/header" unless @no_header
    #content.container.content
      = yield

  %div.flash
    %p.notice= notice
    %p.alert= alert

  %footer
    =link_to t('footer.contact_us'), contact_url

    = render "layouts/google_analytics"
